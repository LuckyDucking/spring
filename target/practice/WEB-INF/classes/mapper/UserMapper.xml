<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.UserMapper">
    <cache eviction="LRU" flushInterval="60000" size="1024" readOnly="false"/>
    <!--<sql id="UserColumns"  >select A.user_id,A.user_name,A.password,A.last_vist,A.last_ip from t_user A</sql>-->
    <resultMap id="userRuseltMap" type="User">
        <id     column="user_id"    property="userId"/>
        <result column="user_name"  property="userName"/>
        <result column="password"   property="password"/>
        <result column="last_vist"  property="lastVist"/>
        <result column="last_ip"    property="lastIp"/>
    </resultMap>

    <select id="selectUser"   parameterType="User" resultMap="userRuseltMap" >
        select * from t_user
        <where>
            <if test="user_id !=NULL">
                user_id=#{user_id}
            </if>
            <if test="user_name!=null">
                user_name=#{user_name}
            </if>
            <if test="password!=null">
                password=#{password}
            </if>
            <if test="last_vist!=null">
                last_vist=#{last_vist}
            </if>
            <if test="last_ip">
                last_ip=#{last_ip}
            </if>
        </where>
    </select>

    <select id="selectUserByName" parameterType="String" resultType="User">
        select * from t_user where user_name=#{user_name}
    </select>
    <insert id="insertUser" parameterType="java.util.List" >
        insert into t_user ()
        VALUES
        <foreach  collection="list" item="item" index="index" separator="," >
            (#{item.user_id},#{item.user_name},#{item.password},#{item.last_visit},#{item.last_ip})
        </foreach>
    </insert>
    <select id="UserMatch" parameterType="User" resultType="User">
        select * from t_user where user_name=#{user_name} and password=#{password}
    </select>

</mapper>